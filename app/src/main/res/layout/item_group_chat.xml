<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="12dp"
    android:elevation="4dp"
    android:layout_marginTop="8dp"
    android:background="@drawable/group_chat_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvLatestChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/latest_chat_sample"
        android:maxLines="1"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvLatestChatDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 Juni 2023"
        android:maxLines="1"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:ellipsize="end"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvLatestChat"/>

</androidx.constraintlayout.widget.ConstraintLayout>